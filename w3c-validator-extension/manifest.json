{
  "manifest_version": 3,
  "name": "W3C Validator Checker",
  "version": "1.0",
  "description": "Vérifie la validité W3C de la page courante",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://validator.w3.org/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "Vérifier la validité W3C",
    "default_popup": "popup.html"
  }
}
